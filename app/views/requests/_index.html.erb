<div class="row">
  <%= @requests.each do |request| %>
  <div class="col-sm-6 col-md-6">
    <div class="well">
      <h2 class="text-muted"><%= request.type_request %></h2>
      <p><span class="label label-default">Status: <%= request.status %></span></p>

      <p><%= request.body %></p>
      <hr>
      <h3><%= request.price  %> | <%= request.time_request%></h3>
      <hr>
      <%= link_to 'Просмотреть', request, class: "btn btn-default btn-sm"  %>
      <%= link_to 'Редактировать', edit_request_path(request.id), class: "btn btn-default btn-sm"  %>
      <%= link_to 'Удалить', request, method: :delete, data: { confirm: 'Вы уверены?' } , class: "btn btn-default btn-sm" %>
    </div>
  </div>
  <% end %>
</div>


